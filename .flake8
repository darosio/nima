[flake8]
#select = B,B9,C,D,DAR,E,F,I,S,W,PT,N
#select = B,B9,C,D,DAR,E,F,N,RST,S,W
#ignore = E203,E501,RST201,RST203,RST301,W503
ignore = E203,E501,W503,DAR000
per-file-ignores = tests/*:S101,S404,S603
max-line-length = 88
max-complexity = 33
import-order-style = pycharm
application-import-names = nimg,tests
docstring-convention = numpy
