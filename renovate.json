{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "prFooter": " (#{{prNumber}})",
    "packageRules": [
        {
            "matchPackageNames": [
                "sphinx"
            ],
            "rangeStrategy": "pin",
            "allowedVersions": "<8.2",
            "automerge": false,
            "labels": [
                "docs"
            ]
        },
        {
            "matchPackageNames": [
                "sphinx-autodoc-typehints"
            ],
            "rangeStrategy": "pin",
            "allowedVersions": "<3.2",
            "automerge": false,
            "labels": [
                "docs"
            ]
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "automerge": false,
            "rangeStrategy": "bump",
            "labels": [
                "dependencies"
            ],
            "commitMessagePrefix": "build(deps):",
            "commitMessageAction": "bump",
            "commitMessageTopic": "{{depName}}",
            "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
            "commitMessageSuffix": "{{groupName}}"
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "commitizen",
                "pre-commit",
                "pylsp-mypy",
                "ruff",
                "ruff-lsp"
            ],
            "groupName": "dev",
            "automerge": false,
            "labels": [
                "dependencies"
            ],
            "commitMessagePrefix": "build(dev):",
            "commitMessageAction": "bump",
            "commitMessageTopic": "{{depName}}",
            "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "autodocsumm",
                "bokeh",
                "dask-image",
                "holoviews",
                "hvplot",
                "impy-array",
                "ipykernel",
                "jupyter",
                "nbsphinx",
                "pydata-sphinx-theme",
                "pygments",
                "pympler",
                "seaborn",
                "selenium",
                "sphinx-autodoc-typehints",
                "sphinx-click",
                "sphinx",
                "statsmodels"
            ],
            "groupName": "docs",
            "automerge": false,
            "labels": [
                "dependencies"
            ],
            "commitMessagePrefix": "build(docs):",
            "commitMessageAction": "bump",
            "commitMessageTopic": "{{depName}}",
            "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "coverage",
                "mypy",
                "pandas-stubs",
                "pygments",
                "pypdf",
                "pytest",
                "xdoctest"
            ],
            "groupName": "tests",
            "automerge": false,
            "labels": [
                "dependencies"
            ],
            "commitMessagePrefix": "build(tests):",
            "commitMessageAction": "bump",
            "commitMessageTopic": "{{depName}}",
            "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
        },
        {
            "matchFiles": [
                "pyproject.toml"
            ],
            "matchDepNames": [
                "python"
            ],
            "enabled": false
        }
    ]
}
